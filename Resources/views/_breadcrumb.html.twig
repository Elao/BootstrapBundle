<ul class="breadcrumb">
    {% if action is defined %}
        {% for label, uri in admin.breadcrumbs(action) %}
            {% if loop.last %}
                <li class="active">{{label}}</li>
            {% else %}
                <li>
                    <a href="{{ uri }}">{{label}}</a> <span class="divider">/</span>
                </li>
            {% endif %}
        {% endfor %}
    {% endif %}
</ul>